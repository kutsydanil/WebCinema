@model WebCinema.Models.IndexViewModels.ActorsViewModel

@{
    ViewData["Title"] = "Актеры";
}

<h1>Актеры</h1>


<form method="get">
    <div>
        <label>Фамилия: </label>
        <input asp-for="ActorSurName" />

        <label>Имя: </label>
        <input asp-for="ActorName" />

        <label>Отчество: </label>
        <input asp-for="ActorMiddleName"/>
  
        <input type="submit" value="Фильтр" />
    </div>
</form>

<p>
    <a asp-action="Create">Создать запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Фамилия
            </th>
            <th>
                Имя
            </th>
            <th>
                Отчество
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ActorsList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

